/* Simple layout and component styles */
:root{
  --max-width: 1440px;
  --container-padding: 16px;
  --bg: #f8fafc;
  --card-bg: #ffffff;
  --muted: #6b7280;
  --accent: #2563eb;
  --success: #10b981;
  --amber: #f59e0b;
  --gray: #6b7280;
}
*{box-sizing:border-box}
body{font-family:Inter,ui-sans-serif,system-ui,-apple-system,'Segoe UI',Roboto,'Helvetica Neue',Arial; margin:0; background:var(--bg); color:#111827;}
.main-container{ max-width:var(--max-width); margin:0 auto; padding:24px; min-height:60vh; }
.container-max{ max-width:var(--max-width); margin:0 auto; padding:var(--container-padding); }
header, footer{ background: #fff; border-top: 1px solid rgba(0,0,0,0.03); }
.app-root{ display:flex; flex-direction:column; min-height:100vh; }
header .header-inner{ display:flex; align-items:center; justify-content:space-between; padding:16px; max-width:var(--max-width); margin:0 auto; }
.nav-links a{ margin-right:12px; text-decoration:none; color:var(--muted); padding:8px;border-radius:6px; }
.btn{ display:inline-block; padding:8px 12px; border-radius:6px; text-decoration:none; cursor:pointer; }
.btn-primary{ background:var(--accent); color:#fff; }
.btn-ghost{ background:transparent; border:1px solid rgba(0,0,0,0.06); color:var(--accent); }
.box-card{ background:var(--card-bg); box-shadow: 0 8px 24px rgba(16,24,40,0.06); border-radius:12px; padding:16px; }
.grid{ display:grid; gap:12px; }
.grid.cols-3{ grid-template-columns: repeat(3, 1fr); }
.text-muted{ color:var(--muted); }
.status-pill{ display:inline-block; padding:6px 10px; border-radius:999px; font-size:12px; font-weight:600; }
.status-open{ background: rgba(16,185,129,0.12); color: #065f46; }
.status-in_progress{ background: rgba(245,158,11,0.12); color: #92400e; }
.status-closed{ background: rgba(107,114,128,0.12); color: #374151; }
input, textarea, select{ width:100%; padding:8px; border:1px solid #e5e7eb; border-radius:8px; font-size:14px; }
label{ font-weight:600; display:block; margin-bottom:6px; }
.form-row{ margin-bottom:12px; }
.error{ color:#dc2626; font-size:13px; margin-top:6px; }
.hero{ position:relative; overflow:hidden; border-radius:12px; padding:28px; }
.hero .circle{ position:absolute; border-radius:50%; opacity:0.9; }
.hero .circle.c1{ width:120px; height:120px; left:-40px; top:-40px; background:#e6f4ea; }
.hero .circle.c2{ width:80px; height:80px; right:20px; top:-20px; background:#fff6e6; }
@media (min-width:800px){ .hero-grid{ display:grid; grid-template-columns: 1fr 1fr; gap:24px; align-items:center; } }
